#!/usr/bin/env bash

# Benchmark info
echo "TIMING - Starting main script at: $(date)"

# Set working directory to home directory
cd "${HOME}"

# Clear any existing XDG_RUNTIME_DIR to avoid warnings from dconf
unset XDG_RUNTIME_DIR

<%- unless context.modules.blank? -%>
# Purge the module environment to avoid conflicts
module purge

# Load the require modules
module load <%= context.modules %>

# List loaded modules
module list
<%- end -%>

# Benchmark info
echo "TIMING - Starting QuPath at: $(date)"

# Launch QuPath using xpra
set -x
apptainer exec ${CONTAINER} xpra start \
    --minimal=yes \
    --bind-tcp=0.0.0.0:${PORT},auth=file,filename=${PASSWORD_FILE} \
    --websocket-upgrade=yes \
    --socket-dirs=${PWD} \
    --opengl=yes \
    --html=on \
    --compression-level=1 \
    --start="/QuPath/bin/QuPath" \
    --exit-with-windows=yes \
    --daemon=no \
    --clipboard=yes \
    --xvfb="/usr/bin/Xvfb +extension Composite -screen 0 1920x1080x24+32 -nolisten tcp -noreset" \
    $DISPLAY
